<style>
    .noteBox {
        background: var(--HB_Color_Accent);
        padding: 14px;
        position: relative;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.19), 0 6px 6px rgba(0, 0, 0, 0.23);
        border-top: 4px solid var(--sl-color-white);
        border-bottom: 4px solid var(--sl-color-white);
        margin: 3rem;
    }

    .noteBox-topLeftDecoration,
    .noteBox-bottomLeftDecoration,
    .noteBox-topRightDecoration,
    .noteBox-bottomRightDecoration {
        width: 15px;
        height: 8px;
        position: absolute;
        margin: 0px !important;
        stroke: var(--sl-color-white);
    }

    .noteBox-topLeftDecoration {
        top: -11px;
        left: 0px;
    }

    .noteBox-bottomLeftDecoration {
        bottom: -11px;
        left: 0px;
    }

    .noteBox-topRightDecoration {
        top: -11px;
        right: 0px;
    }

    .noteBox-bottomRightDecoration {
        bottom: -11px;
        right: 0px;
    }
</style>

<div class="noteBox">
    <slot />

    <svg class="noteBox-topLeftDecoration" xmlns="http://www.w3.org/2000/svg" width="15" height="8" viewBox="0 0 15 8">
        <path d="M15 0 L15 8 L0 8 Z" stroke="black" stroke-width="0" fill="var(--sl-color-white)" />
    </svg>
   
    <svg class="noteBox-topRightDecoration" xmlns="http://www.w3.org/2000/svg" width="15" height="8" viewBox="0 0 15 8">
        <path d="M0 8 L0 0 L15 8 Z" stroke="black" stroke-width="0" fill="var(--sl-color-white)" />
    </svg>
    
    <svg class="noteBox-bottomLeftDecoration" xmlns="http://www.w3.org/2000/svg" width="15" height="8" viewBox="0 0 15 8">
        <path d="M15 0 L15 8 L0 0 Z" stroke="black" stroke-width="0" fill="var(--sl-color-white)" />
    </svg>

    <svg class="noteBox-bottomRightDecoration" xmlns="http://www.w3.org/2000/svg" width="15" height="8" viewBox="0 0 15 8">
        <path d="M0 0 L15 0 L0 8 Z" stroke="black" stroke-width="0" fill="var(--sl-color-white)" />
    </svg>
    
    

    <polygon points="0,0 0,15 15,15" class="noteBox-bottomLeftDecoration" />
    <polygon points="0,0 0,15 15,15" class="noteBox-topRightDecoration" />
    <polygon points="0,0 0,15 15,15" class="noteBox-bottomRightDecoration" />
</div>